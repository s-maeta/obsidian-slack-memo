{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "outDir": "lib",
    "typeRoots": ["node_modules/@types"],
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/__tests__/**/*",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
